@model ProgettoIUM.Web.Features.Segnalazioni.EditViewModel
@{
    ViewData["Title"] = "Dettaglio Segnalazione - #" + Model.Id.ToString().Substring(0, 8).ToUpper();
}
@section Styles {
    <link rel="stylesheet" href="~/css/Edit.css" asp-append-versione="trueS" />
}

@section pageTitle {
    <nav class="navbar navbar-expand navbar-light flex-wrap px-4">
        <div class="navbar-brand text-truncate fw-bold">
            @ViewData["Title"]
        </div>
        <div class="ms-auto d-flex align-items-center">
            <button type="button" class="btn btn-primary px-4 rounded-pill shadow-sm"
                    onclick="document.getElementById('edit-form-submitter').click()">
                <i class="fa-solid fa-floppy-disk"></i>&nbsp;Salva
            </button>
        </div>
    </nav>
    <hr>
}

<div id="vue-app">
    <div class="container-lg py-4">
        <div class="row">
            <div class="col-12">
                @* SEZIONE AMMINISTRAZIONE (Ispirata a image_97f3eb.png) *@
                <form method="post" action="@Url.Action(MVC.Segnalazioni.Edit())" id="edit-form">
                    <input id="edit-form-submitter" class="d-none" type="submit" />
                    <input type="hidden" asp-for="Id" />

                    <div class="custom-gray-card mb-5">
                        <h5 class="text-center fw-bold text-uppercase mb-4 pt-2" style="letter-spacing: 2px;">Amministrazione</h5>
                        <div class="row g-4 px-3 pb-2">
                            <div class="col-md-4">
                                <label class="small fw-bold mb-2 d-block text-dark">Stato Segnalazione</label>
                                <select asp-for="StatoAttuale" v-model="model.statoAttuale" class="form-select modern-input">
                                    <option value="Da prendere in carico">Da prendere in carico</option>
                                    <option value="In lavorazione">In lavorazione</option>
                                    <option value="Chiusa">Chiusa</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="small fw-bold mb-2 d-block text-dark">Data risoluzione prevista</label>
                                <input type="date" asp-for="DataRisoluzionePrevista" v-model="model.dataRisoluzionePrevista" class="form-control modern-input" />
                            </div>
                            <div class="col-md-4">
                                <label class="small fw-bold mb-2 d-block text-dark">Esito</label>
                                <input asp-for="Esito" class="form-control modern-input" placeholder="Inserisci esito..." />
                            </div>
                        </div>
                    </div>
                </form>
                <hr>

                @* SEZIONE CHAT (Gestita da VUE) *@
                <div class="mb-5 text-center">
                    <h6 class="fw-bold text-uppercase small mb-4">Chat Utente</h6>
                    <div class="mx-auto" style="max-width: 700px;">
                        <div id="chatContainer" class="chat-area mb-3 p-3 bg-white rounded-4 border shadow-sm" style="height: 300px; overflow-y: auto;">
                            <div v-for="msg in model.Messaggi" :class="['mb-3', msg.DaOperatore ? 'text-end' : 'text-start']">
                                <div :class="['d-inline-block p-3 rounded-4 shadow-sm small', msg.DaOperatore ? 'bg-primary text-white' : 'bg-light border']">
                                    {{ msg.Testo }}
                                </div>
                                <div class="text-muted" style="font-size: 0.7rem;">{{ msg.Data }}</div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <input type="text" v-model="messaggioCorrente" @@keyup.enter="inviaMessaggio"
                                   class="form-control border-0 shadow-sm p-3 rounded-4" placeholder="Scrivi un messaggio...">
                            <button type="button" @@click="inviaMessaggio" class="btn btn-primary rounded-4 px-4 shadow-sm">
                                <i class="fa-solid fa-paper-plane"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <hr>

                @* SEZIONE INFORMAZIONI (Ispirata a image_97f6d0.png) *@
                <div class="custom-gray-card mb-5">
                    <h5 class="text-center fw-bold text-uppercase mb-4 pt-2" style="letter-spacing: 2px;">Informazioni</h5>

                    <div class="row g-4 px-3 mb-4">
                        <div class="col-md-6">
                            <label class="small fw-bold text-muted mb-2 d-block">Categoria Illecito</label>
                            <div class="info-field">@Model.Categoria</div>
                        </div>
                        <div class="col-md-6">
                            <label class="small fw-bold text-muted mb-2 d-block">Data e Ora</label>
                            <div class="info-field">@Model.DataInvio.ToString("dd/MM/yyyy HH:mm")</div>
                        </div>
                        <div class="col-md-6">
                            <label class="small fw-bold text-muted mb-2 d-block">Luogo</label>
                            <div class="info-field">@Model.Luogo</div>
                        </div>
                        <div class="col-md-6">
                            <label class="small fw-bold text-muted mb-2 d-block">Reparto</label>
                            <div class="info-field">@(string.IsNullOrWhiteSpace(Model.Reparto) ? "\u00A0" : Model.Reparto)</div>
                        </div>
                    </div>

                    <div class="px-3 mb-4">
                        <label class="small fw-bold text-center d-block text-uppercase mb-3" style="letter-spacing: 1px;">Descrizione Accaduto</label>
                        <div class="description-field">
                            @Model.Descrizione
                        </div>
                    </div>

                    <div class="text-center pb-3">
                        <label class="small fw-bold text-uppercase mb-2 d-block" style="letter-spacing: 1px;">Allegati</label>
                        <div class="d-flex justify-content-center">
                            @if (!string.IsNullOrEmpty(Model.PathFile))
                            {
                                <a href="@Model.PathFile" target="_blank" class="btn btn-sm btn-dark rounded-pill px-4 shadow-sm">
                                    <i class="fa-solid fa-paperclip me-2"></i> @Model.NomeFile
                                </a>
                            }
                            else
                            {
                                <span class="text-muted small fst-italic">Nessun file allegato</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="/js/bundle-vue.js" asp-append-version="true"></script>
    <script src="~/Features/Segnalazioni/Edit.js" asp-append-version="true"></script>
    <script src="~/node_modules/@@microsoft/signalr/dist/browser/signalr.js" asp-append-version="true"></script>
    <script src="~/js/signalRConnectionManager.js" asp-append-version="true"></script>

    <script type="application/json" id="Seed_JSON">
        @Html.Raw(Model.ToJson())
    </script>

    <script type="text/javascript">
        // Inizializzazione SignalR sul gruppo della segnalazione specifica
        var signalRManager = new SignalRConnectionManager("/ProgettoIUMHub", "@Model.Id", "JoinGroup", "LeaveGroup");
        signalRManager.registerEvents();
        signalRManager.startConnection();

        // Inizializzazione Logica Vue
        var editModel = new Features.Segnalazioni.editVueModel(signalRManager.connection, JSON.parse(document.getElementById("Seed_JSON").innerText));

        var vueModel = new Vue({
            el: '#vue-app',
            data: editModel
        });
    </script>
}