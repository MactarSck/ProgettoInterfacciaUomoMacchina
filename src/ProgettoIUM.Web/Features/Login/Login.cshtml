@model ProgettoIUM.Web.Features.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="container d-flex justify-content-center mt-5 mb-5">

 
    <div class="card border-0 p-5 text-center"
         style="
        border-radius: 40px;
        max-width: 500px;
        width: 100%;
        background-color: #e2ecf9;
        box-shadow:
            0 20px 40px rgba(0, 0, 0, 0.12),
            0 8px 16px rgba(0, 0, 0, 0.08);
         transition: box-shadow 0.3s ease, transform 0.3s ease; ">


      
      

        <h2 class="fw-bold mb-2">Accesso Area Riservata</h2>
        <p class="text-muted mb-4 small">Inserisci le tue credenziali per procedere</p>

        <form method="post" role="form" autocomplete="off">
            <input asp-for="ReturnUrl" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           
            <div class="mb-3 text-start">
                <label asp-for="Email" class="form-label fw-semibold small ms-2 text-secondary"></label>
                <input asp-for="Email" class="form-control form-control-lg border-0 shadow-sm"
                       style="border-radius: 15px;" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

         
            <div class="mb-4 text-start">
                <label asp-for="Password" class="form-label fw-semibold small ms-2 text-secondary"></label>
                <input asp-for="Password" class="form-control form-control-lg border-0 shadow-sm"
                       style="border-radius: 15px;" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

       
            

           
            <div class="d-grid px-4">
                <button type="submit" class="btn btn-lg fw-bold text-white shadow-sm py-3"
                        style="background-color: #6da5ff; border-radius: 18px; text-transform: uppercase; font-size: 0.9rem;">
                    Accedi
                </button>
            </div>
        </form>

        <div class="mt-4">
            <a href="/" class="text-decoration-none text-muted small">
                <i class="fa-solid fa-chevron-left me-1"></i> Torna indietro
            </a>
        </div>
    </div>
</div>

<style>
    html, body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    body {
        background: linear-gradient(180deg, #FFFFFF 0%, #ECECEC 91%);
        background-attachment: fixed;
        background-repeat: no-repeat;
    }


    .btn-lg:hover {
        background-color: #5a94f0 !important;
        filter: brightness(1.05);
        transition: all 0.3s ease;
    }

   
    .form-control {
        padding: 0.8rem 1.2rem;
    }

    .card:hover {
        box-shadow: 0 28px 60px rgba(0, 0, 0, 0.16), 0 12px 24px rgba(0, 0, 0, 0.1);
        transform: translateY(-4px);
    }

</style>