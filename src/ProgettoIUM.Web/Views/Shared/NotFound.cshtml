@{
    Layout = "_Layout";
    ViewData["Title"] = "Pagina non trovata";
}

@section Styles {
    <style>
        .error-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #ffffff;
            font-family: 'Montserrat', sans-serif;
            padding: 20px;
        }

        .error-container {
            text-align: center;
            max-width: 800px;
        }

        .error-ops {
            font-size: 10rem;
            font-weight: 900;
            letter-spacing: 5px;
            color: #000000;
            margin-bottom: 10px;
        }

        .error-code-text {
            font-size: 1.2rem;
            font-weight: 800;
            letter-spacing: 2px;
            color: #000000;
            text-transform: uppercase;
            margin-bottom: 20px;
        }

        .error-description {
            font-family: sans-serif;
            color: #555;
            font-size: 1.5rem;
            line-height: 1.5;
            margin-bottom: 30px;
        }

        .btn-go-home {
            display: inline-block;
            background-color: #0d47a1;
            margin-right: 10px;
            color: white !important;
            padding: 15px 40px;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 700;
            font-size: 0.9rem;
            text-transform: uppercase;
            transition: transform 0.2s, background-color 0.2s;
            box-shadow: 0 4px 15px rgba(13, 71, 161, 0.3);
        }

            .btn-go-home:hover {
                background-color: #1565c0;
                transform: translateY(-2px);
            }
    </style>
}

<div class="error-page">
    <div class="error-container">

     
        <div class="error-ops">Oops!</div>

        <div class="error-code-text">404 - Page Not Found</div>

        <p class="error-description">
            Hai cliccato su qualcosa che non dovevi?<br />
            <strong>Questa non è la destinazione giusta</strong>
        </p>

        <a asp-controller="Home" asp-action="Index" class="btn-go-home">
            <i class="fa-solid fa-house"></i> Torna alla Homepage
        </a>

    </div>
</div>
